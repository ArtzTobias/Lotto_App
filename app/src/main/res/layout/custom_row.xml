<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rowLayout"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:background="@drawable/custom_row_background">

        <TextView
            android:id="@+id/nameDesTipps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#F6F4F4"/>


        <LinearLayout
            android:id="@+id/innerLayout"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <TextView
                android:id="@+id/rowNumber1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:enabled="false" />

            <TextView
                android:id="@+id/rowNumber2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:enabled="false" />


            <TextView
                android:id="@+id/rowNumber3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:enabled="false" />


            <TextView
                android:id="@+id/rowNumber4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:enabled="false" />


            <TextView
                android:id="@+id/rowNumber5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:enabled="false" />


            <TextView
                android:id="@+id/rowNumber6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:enabled="false" />


            <TextView
                android:id="@+id/rowNumberS"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:enabled="false" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/innerLayout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textRichtige"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Richtige: 3"
                android:textSize="17dp"
                android:textColor="#F6F4F4"/>

            <TextView
                android:id="@+id/textSuperzahl"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Superzahl: richtig"
                android:textSize="17dp"
                android:textColor="#F6F4F4"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>