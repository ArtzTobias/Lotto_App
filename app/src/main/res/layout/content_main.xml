<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/onlineResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/nav_host_fragment"
        android:layout_alignParentTop="true">


        <TextView
            android:id="@+id/Datum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keine Verbindung"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/gezogeneZahlen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zahlen: Keine Verbindung"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/gezogeneSuperzahl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Superzahl: Keine Verbindung"
            android:textSize="24sp" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/tableHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/onlineResults"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/onlineResults">

            <TextView
                android:id="@+id/HeadTipps"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Meine Tipps"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/HeadRichtige"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Richtige"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/HeadSuperzahl"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Superzahl"
                android:textSize="18sp" />

        </LinearLayout>

    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tableHead"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph">



        <ListView
            android:id="@+id/listviewMyTips"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content" />

    </fragment>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
